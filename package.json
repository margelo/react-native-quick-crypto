{
  "version": "1.0.0-beta.1",
  "scripts": {
    "check-all": "./scripts/clang-format.sh",
    "nitro": "cd packages/react-native-quick-crypto && bunx nitro-codegen",
    "pods": "bun --filter=\"react-native-quick-crypto-example\" pods",
    "example": "cd example && bun start",
    "bootstrap": "bun install && bun pods",
    "tsc": "bun --filter=\"*\" typescript",
    "lint": "bun --filter=\"*\" lint",
    "prepare": "bun --filter=\"react-native-quick-crypto\" prepare",
    "release": "release-it"
  },
  "workspaces": [
    "packages/*",
    "example"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@release-it/bumper": "^6.0.1",
    "release-it": "^17.6.0"
  },
  "packageManager": "bun@1.1.22",
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  }
}
