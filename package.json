{
  "version": "1.0.0-beta.3",
  "scripts": {
    "check-all": "./scripts/clang-format.sh",
    "clean": "bun --filter='*' clean",
    "specs": "bun --filter='react-native-quick-crypto' specs",
    "pods": "bun --filter='react-native-quick-crypto-example' pods",
    "example": "bun --filter='react-native-quick-crypto-example' start",
    "bootstrap": "bun install && bun pods",
    "tsc": "bun --filter='*' typescript",
    "lint": "bun --filter='*' lint",
    "lint:fix": "bun --filter='*' lint:fix",
    "format": "bun --filter='*' format",
    "format:fix": "bun --filter='*' format:fix",
    "prepare": "bun --filter=\"react-native-quick-crypto\" prepare",
    "pre-release": "./scripts/prepare-release.sh",
    "release-git": "bun pre-release && release-it",
    "release-npm": "bun pre-release && cd packages/react-native-quick-crypto && release-it"
  },
  "workspaces": [
    "packages/react-native-quick-crypto",
    "example"
  ],
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "release-it": "^17.6.0"
  },
  "packageManager": "bun@1.1.26",
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      },
      "@release-it-plugins/workspaces": true
    }
  }
}
