{
  "name": "react-native-quick-crypto",
  "version": "0.7.2",
  "description": "A fast implementation of Node's `crypto` module written in C/C++ JSI",
  "packageManager": "yarn@3.6.4",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "lib/module/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android/src",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "ios",
    "cpp",
    "react-native-quick-crypto.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "tsc": "tsc --noEmit",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && yarn pods",
    "bootstrap": "yarn workspace example && yarn && yarn workspace example pods",
    "test": "jest"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "jsi",
    "crypto",
    "c++",
    "fast",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/margelo/react-native-quick-crypto.git"
  },
  "authors": "Szymon Kapa≈Ça (szymon20000@gmail.com) & Marc Rousavy <me@mrousavy.com> (https://github.com/mrousavy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/margelo/react-native-quick-crypto/issues"
  },
  "homepage": "https://github.com/margelo/react-native-quick-crypto#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.0.5",
    "events": "^3.3.0",
    "react-native-fast-encoder": "^0.1.12",
    "react-native-quick-base64": "^2.1.2",
    "readable-stream": "^4.5.2",
    "string_decoder": "^1.3.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@jamesacarr/eslint-formatter-github-actions": "^0.2.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.33",
    "@types/readable-stream": "^4.0.11",
    "eslint": "9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "react": "18.3.1",
    "react-native": "^0.74.4",
    "react-native-builder-bob": "^0.28.1",
    "react-native-nitro-modules": "file:../../../react-native-nitro/packages/react-native-nitro-modules",
    "release-it": "^17.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "no-dupe-class-members": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  }
}
